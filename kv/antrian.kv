<QueueScreen>:

    name:'antrian'
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint_y: 1
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Background color for the whole app
            Rectangle:
                pos: self.pos
                size: self.size
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Button:
                text: '<'  # Tanda panah kiri
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks
                on_press: app.root.current = 'home'

            Label:
                text: 'Antrian'
                size_hint: 1, None
                height: '40dp'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1  # Warna teks

            Button:
                text: 'â‹®'  # Tiga titik vertikal
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks

        BoxLayout:
            orientation: 'vertical'
            padding: [20, 20, 20, 20]
            spacing: 15
            canvas.before:
                Color:
                    rgba: 0.95, 0.95, 0.98, 1  # Latar belakang yang lembut
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [15]

            Label:
                id: queue_label
                text: "Ambil Antrian"
                font_size: 28
                color: 0.1, 0.1, 0.3, 1  # Warna teks gelap untuk kontras
                bold: True
                size_hint_y: None
                height: self.texture_size[1] + 10
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None

            Button:
                text: "Ambil Antrian"
                font_size: 22
                size_hint_y: None
                height: 55
                background_color: 0.2, 0.6, 1, 1  # Warna biru untuk tombol utama
                color: 1, 1, 1, 1  # Teks putih untuk kontras dengan latar
                bold: True
                on_release: root.get_queue()

            Label:
                id: taken_queue_label
                text: "Nomor Antrian yang Diambil:"
                font_size: 20
                color: 0.2, 0.2, 0.4, 1
                bold: True
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: self.texture_size[1] + 15
                text_size: self.width, None

            Label:
                id: remaining_queue_label
                text: "Sisa Antrian: 0"
                font_size: 18
                color: 0.3, 0.3, 0.3, 1
                halign: "center"
                valign: "middle"
                size_hint_y: None
                height: self.texture_size[1] + 10

            Button:
                text: "Refresh Sisa Antrian"
                font_size: 20
                size_hint_y: None
                height: 50
                background_color: 0.2, 0.6, 1, 1
                color: 1, 1, 1, 1
                on_release: root.show_remaining_queue()
