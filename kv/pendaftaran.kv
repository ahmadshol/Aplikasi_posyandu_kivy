<DaftarScreen>

    name: 'daftar'

    BoxLayout:
        orientation: 'vertical'
        padding: [50, 0, 50, 80]
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Button:
                text: '<'  # Tanda panah kiri
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks
                on_press: app.root.current = 'home'

            Label:
                text: 'pendaftaran'
                size_hint: 1, None
                height: '40dp'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1  # Warna teks

            Button:
                text: 'â‹®'  # Tiga titik vertikal
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks

        Widget:
            size_hint_x: 0.08

        Label:
            text: 'Form\nPendaftaran'
            font_size: '24sp'
            bold: True
            halign: 'center'
            valign: 'middle'
            color: 0 , 0 , 0 , 1
            size_hint: 1, None
        TextInput:
            id: nik
            hint_text: 'Nik'
            size_hint_y: None
            background_color: 1, 1, 1, 0
            foreground_color: 0, 0, 0, 1
            height: 40
        TextInput:
            id: nama
            hint_text: 'Nama'
            password: True
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40
        TextInput:
            id: tanggalLahir
            hint_text: 'Tanggal lahir'
            password: True
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40
        TextInput:
            id: alamat
            hint_text: 'Alamat'
            password: True
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40
        TextInput:
            id: noHp
            hint_text: 'Nomor hp'
            password: True
            size_hint_y: None
            background_color: 1, 1, 1, 0
            height: 40

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, 1
            height: 30
            pos_hint: {'center_x': 0.2, 'center_y': 0.2}
            CheckBox:
                color: [0, 0, 0, 1]
            Label:
                color: [0, 0, 0, 1]
                font_size: 11
                size_hint_y: 1
                size_hint_x: None
                text: 'Lansia'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, 1
            height: 30
            pos_hint: {'center_x': 0.2, 'center_y': 0.2}
            CheckBox:
                color: [0, 0, 0, 1]
                
            Label:
                color: [0, 0, 0, 1]
                font_size: 11
                size_hint_y: 1
                size_hint_x: None
                text: 'Balita'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 280, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: -120
            canvas.before:
                Color:
                    rgba: 1, 0.8, 0, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            Button:
                size_hint_y: None
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                height: 50
                text: "Daftar Sekarang"
                background_normal: ''
                background_color: 1, 1, 1, 0
                color: 0, 0, 0, 1
                on_release: app.login(email.text, password.text)
