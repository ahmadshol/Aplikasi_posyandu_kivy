    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    Image:
        source: 'img/avatar.png'
        size_hint_x: None
        width: 50

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.name
            font_size: 16
            color: 0, 0, 0, 1
            bold: True
        Label:
            text: root.category
            font_size: 16
            color: 0, 0, 0, 1

    AnchorLayout:
