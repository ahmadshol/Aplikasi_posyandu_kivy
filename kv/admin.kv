<AdminScreen>:
    name: 'admin'
    
    BoxLayout:  # Ganti HealthApp menjadi BoxLayout
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Set background color to white
            Rectangle:
                pos: self.pos
                size: self.size

        # Top bar with time, app name, notification, and profile icons
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            Label:
                text: 'Admin'
                font_size: '24dp'
                bold: True
                color: 0, 0, 0, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size  # Mengatur ukuran teks agar sesuai dengan ukuran Label

            ClickableImage:
                source: 'img/avatar.png' 
                on_press:
                    app.root.current = 'profil'

        # Column for icons and "Konsultasi dengan spesialis" inside one box
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '250dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
                # Adding background image
                Rectangle:
                    source: 'img/background.jpeg'
                    size: self.size
                    pos: self.pos

            GridLayout:
                cols: 3
                padding: '10dp'
                spacing: '5dp'
                size_hint_y: None
                height: '90dp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10,]
                # Icons and text below them
                BoxLayout:
                    orientation: 'vertical'
                    ClickableImage:
                        source: 'img/pendafftaran.png' 
                        on_press: app.root.current = 'pasien'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                        size_hint_x: 1
                    Label:
                        text: 'Data pasien'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    ClickableImage:
                        source: 'img/pendafftaran.png' 
                        on_press: app.root.current = 'datauser'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                        size_hint_x: 1
                    Label:
                        text: 'Data user'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1        
                BoxLayout:
                    orientation: 'vertical'
                    ClickableImage:
                        source: 'img/antrian 1.png' 
                        on_press: app.root.current = 'admantrian'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                        size_hint_x: 1
                    Label:
                        text: 'Set Antrian'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1

            # Section for "Konsultasi dengan spesialis"
            BoxLayout:
                orientation: 'horizontal'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: '50dp'
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10,]
                Image:
                    source: 'img/konsultasi.png'
                    size_hint_x: None
                    width: '40dp'
                    allow_stretch: True
                Label:
                    text: 'Konsultasi dengan spesialis'
                    font_size: '16dp'
                    bold: True
                    color: 0, 0, 0, 1
                Button:
                    text: '>'
                    size_hint_x: None
                    width: '30dp'
                    background_color: (0, 0.5, 1, 1)
                    color: 1, 1, 1, 1
            
