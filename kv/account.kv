<AccountScreen>:
    name: 'account'
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 0, 20, 20]
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Button:
                text: '<'  # Tanda panah kiri
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks
                on_press: app.root.current = 'page_one'

            Label:
                text: 'Pendaftaran'
                size_hint: 1, None
                height: '40dp'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1  # Warna teks

            Button:
                text: 'â‹®'  # Tiga titik vertikal
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks

        ScrollView:
            GridLayout:
                id: accounts_box
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: '10dp'
                padding: '10dp'

<ClickableBox>:
    canvas.before:
        Color:
            rgba: 0.9, 0.9, 0.9, 1  # Warna latar belakang
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10, 10, 10, 10]

    Image:
        source: root.user_data['avatar']
        size_hint: None, None
        size: 50, 50

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.user_data['name']
            size_hint_y: None
            height: 25
            color: 0, 0, 0, 1
        Label:
            text: root.user_data['email']
            size_hint_y: None
            height: 25
            color: 0, 0, 0, 1

<HomeApp>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: welcome_label
            text: "Welcome"
            font_size: '24sp'
            size_hint_y: None
            height: '50dp'