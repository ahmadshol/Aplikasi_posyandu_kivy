<AccountScreen>:
    name: 'account'
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 20]
        spacing: 20
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: 'Pilih Akun'
            font_size: '24sp'
            bold: True
            size_hint_y: None
            height: self.texture_size[1]

        ScrollView:
            BoxLayout:
                id: accounts_box
                orientation: 'vertical'
                spacing: 10
                padding: [10, 10, 10, 10]
                size_hint_y: None
                height: self.minimum_height

        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: 280, 40
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            spacing: -120
            canvas.before:
                Color:
                    rgba: 1, 0.8, 0, 1  # Warna kuning
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]  # Membuat sudut membulat
            Button:
                size_hint_y: None
                pos_hint: {'center_y': 0.5, 'center_x': 0.5}
                height: 50
                text: "Logout"
                background_normal: ''
                background_color: 1, 1, 1, 0  # Transparan agar warna background dari canvas terlihat
                color: 0, 0, 0, 1  # Warna teks hitam
                on_release: app.root.current = 'page_one'

        BoxLayout:
            orientation: 'horizontal'
            spacing: 20
            size_hint_y: None
            height: 50
            Button:
                text: 'Ketentuan layanan'
                font_size: '14sp'
                size_hint_y: None
                height: self.texture_size[1]
            Button:
                text: 'Kebijakan privasi'
                font_size: '14sp'
                size_hint_y: None
                height: self.texture_size[1]

<HomeScreen>:
    name: 'home'
    BoxLayout:
        orientation: 'vertical'
        padding: [20, 50, 20, 20]
        Label:
            id: welcome_label
            text: "Welcome"
            font_size: '24sp'
            bold: True
            size_hint_y: None
            height: self.texture_size[1]
