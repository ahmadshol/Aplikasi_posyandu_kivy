<HomeApp>:
    name: 'home'

    BoxLayout:  # Ganti HealthApp menjadi BoxLayout
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # Set background color to white
            Rectangle:
                pos: self.pos
                size: self.size

        # Top bar with time, app name, notification, and profile icons
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            Label:
                text: '9:27'
                size_hint_x: 0.1
            Label:
                text: 'Save Health'
                font_size: '24dp'
                bold: True
            ClickableImage:
                source: 'img/location (1) 1.png' 
                on_press:
                    app.root.current = 'login' 

            ClickableImage:
                source: 'img/avatar.png' 
                on_press:
                    app.root.current = 'login'

                    
        # Search bar
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            TextInput:
                hint_text: 'Search'
                multiline: False

        # Column for icons and "Konsultasi dengan spesialis" inside one box
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '250dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 0.9, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10,]
                # Adding background image
                Rectangle:
                    source: 'img/background.jpeg'
                    size: self.size
                    pos: self.pos

            GridLayout:
                cols: 5
                padding: '10dp'
                spacing: '5dp'
                size_hint_y: None
                height: '90dp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10,]
                # Icons and text below them
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'img/konsultasi.png'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                    Label:
                        text: 'Konsultasi'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'img/location (1) 1.png'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                    Label:
                        text: 'Lokasi'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'img/imun 1.png'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                    Label:
                        text: 'Imunisasi'
                        font_size: '10dp'
                        halign: 'center'
                        color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'img/pendafftaran.png'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                    Label:
                        text: 'Pendaftaran'
                        font_size: '10dp'
                        halign: 'center'
                        color: 0, 0, 0, 1
                BoxLayout:
                    orientation: 'vertical'
                    Image:
                        source: 'img/antrian 1.png'
                        size_hint: None, None
                        size: '40dp', '40dp'
                        allow_stretch: True  # Ensure the image stretches
                    Label:
                        text: 'Antrian'
                        font_size: '12dp'
                        halign: 'center'
                        color: 0, 0, 0, 1

            # Section for "Konsultasi dengan spesialis"
            BoxLayout:
                orientation: 'horizontal'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: '50dp'
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10,]
                Image:
                    source: 'img/konsultasi.png'
                    size_hint_x: None
                    width: '40dp'
                    allow_stretch: True
                Label:
                    text: 'Konsultasi dengan spesialis'
                    font_size: '16dp'
                    bold: True
                    color: 0, 0, 0, 1
                Button:
                    text: '>'
                    size_hint_x: None
                    width: '30dp'
                    background_color: (0, 0.5, 1, 1)
                    color: 1, 1, 1, 1
            
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: '180dp'
            padding: '10dp'
            spacing: '10dp'

            # Card for Sholahudin
            ClickBox:
                orientation: 'horizontal'
                spacing: 10
                padding: 10
                size_hint_y: None
                height: 70
                canvas.before:
                    Color:
                        rgba: 0.9, 0.9, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10, 10, 10, 10]
                Image:
                    source: 'img/avatar.png'
                    size_hint: None, None
                    size: 50, 50
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 5
                    Label:
                        text: 'Rohmad Rafi'
                        font_size: '16dp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0, 0, 0, 1
                    Label:
                        text: 'Lansia'
                        font_size: '12dp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0, 0, 0, 1
            

            ClickBox:
                orientation: 'horizontal'
                spacing: 10
                padding: 10
                size_hint_y: None
                height: 70
                canvas.before:
                    Color:
                        rgba: 0.9, 0.9, 0.9, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [10, 10, 10, 10]
                Image:
                    source: 'img/avatar.png'
                    size_hint: None, None
                    size: 50, 50
                BoxLayout:
                    orientation: 'vertical'
                    spacing: 5
                    Label:
                        text: 'Musarof Morisrona'
                        font_size: '16dp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0, 0, 0, 1
                    Label:
                        text: 'Balita'
                        font_size: '12dp'
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                        color: 0, 0, 0, 1

        # Add button
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                text: '+'
                size_hint: None, None
                size: '50dp', '50dp'
                background_normal: ''
                background_color: 0.2, 0.6, 0.4, 1
                color: 1, 1, 1, 1
                font_size: '40dp'

<ClickBox@ButtonBehavior+BoxLayout>:
    on_release: app.root.current = 'login'

<ClickableImage>:
    allow_stretch: True
    size_hint_x: 0.1
    size: '30dp', '30dp'
