<UserList>:
    name: 'datauser'   
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint_y: 1
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Background color for the whole app
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Button:
                text: '<'  # Tanda panah kiri
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks
                on_press: app.root.current = 'admin'

            Label:
                text: 'Antrian'
                size_hint: 1, None
                height: '40dp'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1  # Warna teks

            Button:
                text: 'â‹®'  # Tiga titik vertikal
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks

        ScrollView:
            BoxLayout:
                id: user_layout
                orientation: 'vertical'
                size_hint_y: None
                padding: [0, 10]
                height: self.minimum_height

<UserItem>:

    orientation: 'horizontal'
    size_hint_y: None
    height: 80
    padding: [5, 5, 5, 5]
    spacing: 10

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # White background
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    Image:
        source: 'img/avatar.png'
        size_hint_x: None
        width: 50

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.name
            font_size: 16
            color: 0, 0, 0, 1
            bold: True
        Label:
            text: root.category
            font_size: 16
            color: 0, 0, 0, 1
