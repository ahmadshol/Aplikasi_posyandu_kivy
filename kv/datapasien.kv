<PatientList>:
    name: 'pasien'   
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        size_hint_y: 1
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 0.95, 1  # Background color for the whole app
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'
            padding: '5dp'
            canvas.before:
                Color:
                    rgba: 0.8, 0.8, 0.8, 1  # Warna abu-abu
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10, 10, 10, 10]

            Button:
                text: '<'  # Tanda panah kiri
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks
                on_press: app.root.current = 'admin'

            Label:
                text: 'Data pasien'
                size_hint: 1, None
                height: '40dp'
                font_size: '20sp'
                bold: True
                color: 0.1, 0.1, 0.1, 1  # Warna teks

            Button:
                text: 'â‹®'  # Tiga titik vertikal
                size_hint: None, None
                width: '50dp'
                height: '40dp'
                background_normal: ''
                background_color: 0.6, 0.6, 0.6, 1  # Warna abu-abu
                color: 1, 1, 1, 1  # Warna teks

        ScrollView:
            size_hint_y: 1
            BoxLayout:
                id: patient_layout
                orientation: 'vertical'
                size_hint_y: None
                padding: [0, 10]
                spacing: 10
                height: self.minimum_height

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Button:
                text: '+'
                size_hint: None, None
                size: '50dp', '50dp'
                background_normal: ''
                background_color: 0.2, 0.6, 0.4, 1
                color: 1, 1, 1, 1
                font_size: '40dp' 
                on_press: app.root.current = 'addbalita'

<PatientItem>:
    name: 'patient_item'
    orientation: 'horizontal'
    size_hint_y: None
    height: 80
    padding: [5, 5, 5, 5]
    spacing: 10

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Background putih
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    Image:
        source: 'img/avatar.png'
        size_hint_x: None
        width: 50

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.name
            font_size: 16
            color: 0, 0, 0, 1
            bold: True
        Label:
            text: root.category
            font_size: 16
            color: 0, 0, 0, 1

    BoxLayout:
        orientation: 'horizontal'
        size_hint_x: None
        width: '120dp'
        spacing: 5

        Button:
            text: 'Edit'
            size_hint: None, None
            size: '60dp', '40dp'
            background_normal: ''
            background_color: 0.2, 0.4, 0.6, 1
            color: 1, 1, 1, 1
            on_press:
                root.edit_data()

        Button:
            text: 'Hapus'
            size_hint: None, None
            size: '60dp', '40dp'
            background_normal: ''
            background_color: 0.8, 0.2, 0.2, 1
            color: 1, 1, 1, 1
            on_press:
                root.delete_data()

<EditPatientScreen>:
    name: "edit_patient"
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "Edit Data Pasien"
            font_size: 24
            bold: True
            color: 0, 0, 0, 1
            size_hint_y: None
            height: 40

        TextInput:
            id: name_input
            hint_text: "Nama Pasien"
            text: root.name 
            font_size: 18
            multiline: False

        TextInput:
            id: category_input
            hint_text: "Kategori"
            text: root.category if root.category else ""
            font_size: 18
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                text: "Simpan"
                background_normal: ''
                background_color: 0.2, 0.6, 0.2, 1
                on_press: root.save_changes()
            Button:
                text: "Batal"
                background_normal: ''
                background_color: 0.6, 0.2, 0.2, 1
                on_press: app.root.current = "pasien" 
